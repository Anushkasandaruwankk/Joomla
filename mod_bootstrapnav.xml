<?xml version="1.0" encoding="utf-8"?>
<extension
	type="module"
	version="3.1"
	client="site"
	method="upgrade">
	<name>Bootstrap Nav</name>
	 <author>Brad Traversy</author>
    <creationDate>January 2014</creationDate>
    <copyright>Copyright (C) 2014 JoomDigi</copyright>
    <license>GNU General Public License version 2 or later</license>
    <authorEmail>brad@joomdigi.com</authorEmail>
    <authorUrl>www.joomdigi.com</authorUrl>
    <version>1.7</version>
    <description>Joomla bootstrap navbar</description>
	<files>
		<filename module="mod_bootstrapnav">mod_bootstrapnav.php</filename>
		<folder>tmpl</folder>
		<filename>helper.php</filename>
		<filename>index.html</filename>		
		<filename>mod_bootstrapnav.xml</filename>
	</files>
	<media destination="mod_bootstrapnav" folder="media">
        <folder>css</folder>
        <folder>js</folder>
    </media>
	<languages>
		<language tag="en-GB">en-GB.mod_bootstrapnav.ini</language>
		<language tag="en-GB">en-GB.mod_bootstrapnav.sys.ini</language>
	</languages>
	<help key="JHELP_EXTENSIONS_MODULE_MANAGER_MENU" />
	<config>
		<fields name="params">
			<fieldset name="basic">
				<field
					name="menutype"
					type="menu"
					label="MOD_MENU_FIELD_MENUTYPE_LABEL"
					description="MOD_MENU_FIELD_MENUTYPE_DESC" />
				<field
					name="base"
					type="menuitem"
					label="MOD_MENU_FIELD_ACTIVE_LABEL"
					description="MOD_MENU_FIELD_ACTIVE_DESC"
					>
					<option value="">JCURRENT</option>
				</field>
				<field
					name="nav_type"
					type="list"
					default="navbar"
					label="MOD_MENU_FIELD_NAV_TYPE_LABEL"
					description="MOD_MENU_FIELD_NAV_TYPE_DESC">
					<option
						value="navbar">Navbar</option>
					<option
						value="listgroup">List Group</option>
				</field>

				<field
					name="background_color"
					type="color"
					default="#f9f9f9"
					label="MOD_MENU_FIELD_NAV_BACKGROUND_COLOR_LABEL"
					description="MOD_MENU_FIELD_NAV_BACKGROUND_COLOR_DESC">					
				</field>

				<field
					name="text_color"
					type="color"
					default="#333333"
					label="MOD_MENU_FIELD_NAV_TEXT_COLOR_LABEL"
					description="MOD_MENU_FIELD_NAV_TEXT_COLOR_DESC">					
				</field>

				<field
					name="active_background_color"
					type="color"
					default="#f4f4f4"
					label="MOD_MENU_FIELD_NAV_ACTIVE_BACKGROUND_COLOR_LABEL"
					description="MOD_MENU_FIELD_NAV_ACTIVE_BACKGROUND_COLOR_DESC">					
				</field>

				<field
					name="fixed"
					type="list"
					default="navbar-default"
					label="Fixed"
					description="Choose if navbar is fixed">
					<option
						value="navbar-default">No</option>
					<option
						value="navbar-fixed-top">Fixed Top</option>
					<option
						value="navbar-fixed-bottom">Fixed Bottom</option>
				</field>

				<field
					name="float"
					type="list"
					label="Float Navbar"
					description="Choose to float nav links">
					<option
						value="">None</option>
					<option
						value="navbar-right">Float Right</option>
					<option
						value="navbar-left">Float Left</option>
				</field>

				<field
					name="brand_type"
					type="list"
					default="text"
					label="Branding Type"
					description="Choose type of branding. None, image or text">
					<option
						value="none">None</option>
					<option
						value="text">Text</option>
					<option
						value="image">Image</option>
				</field>

				<field name="brand_text" 
					type="text" 
					label="Brand Text"
					description="Enter the text for your brand" />

				<field name="brand_image" 
						type="media" 
						label="Brand Logo"
						description="Upload your brand logo"
						directory="stories" />
				
				<field
					name="use_css"
					type="list"
					default="0"
					label="MOD_MENU_FIELD_USE_CSS_LABEL"
					description="MOD_MENU_FIELD_USE_CSS_DESC">
					<option
						value="0">No</option>
					<option
						value="1">Yes</option>
				</field>
				
				<field
					name="show_subnav"
					type="list"
					default="1"
					label="MOD_MENU_FIELD_SHOW_SUBNAV"
					description="MOD_MENU_FIELD_SHOW_SUBNAV_DESC">
					<option
						value="0">No</option>
					<option
						value="1">Yes</option>
				</field>
				
				<field type="spacer" />
				
			</fieldset>

			<fieldset
				name="advanced">
				

				  <field 
                        name="moduleclass_sfx" 
                        type="text" 
                        default="" 
                        label="Module Class Suffix" 
                        description="tag on a css class to the module wrap" />



				<field
					name="window_open"
					type="text"
					label="MOD_MENU_FIELD_TARGET_LABEL"
					description="MOD_MENU_FIELD_TARGET_DESC" />

				<field
					name="layout"
					type="modulelayout"
					label="JFIELD_ALT_LAYOUT_LABEL"
					description="JFIELD_ALT_MODULE_LAYOUT_DESC" />

				

				<field
					name="cache"
					type="list"
					default="1"
					label="COM_MODULES_FIELD_CACHING_LABEL"
					description="COM_MODULES_FIELD_CACHING_DESC">
					<option
						value="1">JGLOBAL_USE_GLOBAL</option>
					<option
						value="0">COM_MODULES_FIELD_VALUE_NOCACHING</option>
				</field>
				<field
					name="cache_time"
					type="text"
					default="900"
					label="COM_MODULES_FIELD_CACHE_TIME_LABEL"
					description="COM_MODULES_FIELD_CACHE_TIME_DESC" />
				<field
					name="cachemode"
					type="hidden"
					default="itemid">
					<option
						value="itemid"></option>
				</field>
			</fieldset>
		</fields>
	</config>
</extension>
